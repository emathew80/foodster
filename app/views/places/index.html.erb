  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>


<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place), :class => 'home_links', :style => 'color: #F7B10C'; %></h1>
    <i><%= place.address %></i><br /><br/>
    <% if place.photos.present? %>

         <%= link_to image_tag(place.photos.first.picture), place_path(place) %>

    <% end %>
    &nbsp
    <p><%= place.description %></p>
     <i><% if place.user.present? %>
      <small><%= place.user.email %></small>
     <% end %></i>
     

    <% if place.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
            <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
    </div>

<% end %>


<div class= "col-xs-10 col-xs-offset-1" style="text-align: center;">
<%= will_paginate @places, renderer: BootstrapPagination::Rails, inner_window: 1, outer_window: 1 %>
 </div>
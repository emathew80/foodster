
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-8">
    <%= image_tag 'user.png', class: 'small' %>
  </div>
  <br/>

  <div class="col-xs-5">
    <h3><%= @user.email %></h3>
    <br/>
    <h4>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h5>
    <br/>
    <h5><%= @user.comments.count %> total comments</h4>
    <h5><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h5>
    
  </div>
  <div class="clear"></div>


<br /><br />
<hr />
<h1 class="text-center">My Comments</h1>
<br /><br />
<% @user.comments.each do |comment| %>

  <div class="col-xs-12 col-sm-6">
    <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place), :class => 'home_links', :style => 'color: #F7B10C'; %></h2>

    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>
<br /><br />

</div>
<div class="clear"></div>

<div class="clear"></div>
<h1 class="booyah-box booyah-box col-xs-10 col-xs-offset-1 text-center">My Places</h1>

<% @user.places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place), :class => 'home_links', :style => 'color: #F7B10C'; %></h1>
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><i><%= place.user.email %></small>
    <% end %></i>

    <% if place.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
<% end %>




